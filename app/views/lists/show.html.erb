<h1><%= @list.name %>'s Tasks</h1>
<br>
<%= link_to "Create A Task", new_list_task_path(@list), class:"btn" %>
<hr>
<% @list.tasks.each do |task| %>
  <hr>
  <%= task.description %>
  <br>
  <%= link_to "Edit Task", edit_list_task_path(@list, task), class:"btn" %>
  <br>
  <%= link_to "Delete Task", list_task_path(@list, task), method: :delete, class:"btn" %>
  <hr>
<% end %>
